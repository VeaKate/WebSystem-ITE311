# Disable directory browsing
Options -Indexes

# Disable server signature
ServerSignature Off

# ----------------------------------------------------------------------
# Custom error pages
# ----------------------------------------------------------------------
# Handle 404 Not Found
ErrorDocument 404 /ITE311-ALCAYDE/error_page.html

# Handle 403 Forbidden
ErrorDocument 403 /ITE311-ALCAYDE/forbidden.html

# ----------------------------------------------------------------------
# Rewrite engine
# ----------------------------------------------------------------------
<IfModule mod_rewrite.c>
    Options +FollowSymlinks
    RewriteEngine On
    RewriteBase /ITE311-ALCAYDE/

    # Redirect Trailing Slashes...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Rewrite "www.example.com -> example.com"
    RewriteCond %{HTTPS} !=on
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^ http://%1%{REQUEST_URI} [R=301,L]

    # Send all non-existent files/directories to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([\s\S]*)$ index.php/$1 [L,NC,QSA]

    # Ensure Authorization header is passed along
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

# ----------------------------------------------------------------------
# Fallback if mod_rewrite is disabled
# ----------------------------------------------------------------------
<IfModule !mod_rewrite.c>
    ErrorDocument 403 /ITE311-ALCAYDE/forbidden.html
    ErrorDocument 404 /ITE311-ALCAYDE/error_page.html
</IfModule>
